# -*- mode: snippet -*-
# name: nix modules
# key: mdl
# --

{
  lib,
  pkgs,
  config,
  ...
}:
let
  inherit (lib)
    mkEnableOption
    mkIf
    mkOption
    types
    ;

  cfg = config.mine.$1;
in
{
  options.mine.$2 = {
    enable = mkEnableOption "$3";
    greeter = mkOption {
      type = types.str;
      default = "world";
    };
  };

  config = mkIf cfg.enable {
    environment.systemPackages = [
        $4
    ];
  };
}